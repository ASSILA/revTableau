{% extends '../layout.twig' %}
 {% block content %}
     <div class="col-lg-10 col-lg-push-1">
         <a href="/add" class="btn btn-primary btn-large">Ajouter <i class="glyphicon glyphicon-plus"></i></a>
         <table class="table table-responsive">
             <thead>
             <tr>
                 <th>Type PC</th>
                 <th>Name</th>
                 <th>Manufacturer</th>
                 <th>Price</th>
                 <th>Stock</th>
                 <th>Options</th>
             </tr>
             </thead>
             <tbody>
             {% for key, f in pcs %}
                 <tr>
                     <td>{{ key }}</td>
                     <td>{{ f.name }}</td>
                     <td>{{ f.manufacturer }}</td>
                     <td>{{ f.price }}</td>
                     <td>{{ f.stock }}</td>
                     <td>{{ f.options[0] }}</td>
                     <td>{{ f.options[1] }}</td>
                     <td>{{ f.options[2] }}</td>
                     <td>
                         <a href="/show/{{ key }}" class="btn btn-primary btn-xs"><i
                                     class="glyphicon glyphicon-eye-open"></i></a>
                         <a href="/edit/{{ key }}" class="btn btn-default btn-xs"><i
                                     class="glyphicon glyphicon-pencil"></i></a>
                         <a href="/remove/{{ key }}" class="btn btn-danger btn-xs"><i
                                     class="glyphicon glyphicon-trash"></i></a>
                     </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
     </div>
 {% endblock %}